<div>aluno-editar</div>



<h2>Editar aluno: {{title}}</h2>

<form class="to-center fundo-transparente" action= "/private/aluno/editar/{{alunoFromDb.id}}" method="POST">
    <label for="input-username">Nome</label>
    <input type="text" id="input-username" name="nome" value="{{alunoFromDb.nome}}" placeholder="Nome do aluno" />

    <label for="input-email">Email</label>
    <input type="email" id="input-email" name="email" value="{{alunoFromDb.email}}" placeholder="Email" />

    <label for="planos">Planos</label>
   <select name="planos" id="planos">
{{#with alunoFromDb}}
       {{#ifCond planos "mensal"}}
        <option selected value="mensal">Mensal</option>
        {{else}}
        <option value="mensal">Mensal</option>
      {{/ifCond}}

       {{#ifCond planos "trimestral"}}
        <option selected value="trimestral">trimestral</option>
        {{else}}
        <option value="trimestral">trimestral</option>
      {{/ifCond}}

       {{#ifCond planos "semestral"}}
        <option selected value="semestral">semestral</option>
        {{else}}
        <option value="semestral">semestral</option>
      {{/ifCond}}

       {{#ifCond planos "anual"}}
        <option selected value="anual">anual</option>
        {{else}}
        <option value="anual">anual</option>
      {{/ifCond}}
      {{/with}}
 </select> 

    <label for="telefone">Telefone</label>
    <input type="tel" name="telefone" id="telefone" value="{{alunoFromDb.telefone}}"/>

    <button type="submit">Salvar</button>
    
</form>
